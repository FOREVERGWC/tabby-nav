// schema.prisma

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "sqlite"
  url      = env("POSTGRES_PRISMA_URL")
}

model Website {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  desc      String?
  tags      Tag[]    @relation("WebsiteTag")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  websites   Website[] @relation("WebsiteTag")
  category   Category? @relation("CategoryTag", fields: [categoryId], references: [id])
  categoryId Int?
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique // 分区名称
  desc      String? // 分区描述
  coverUrl  String? // 分区封面
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  tags      Tag[]     @relation("CategoryTag")
}
